<%- include('partials/header', { title: 'Daily task' }) %> <%- include('partials/sidebar', { page: 'gamified_learning'
    }) %>

    <div class="main-content">
      <div class="container" style="max-width: 800px">
        <a href="/gamified-learning" class="back-link">‚Üê Back</a>

        <div class="glass-card" style="border-left: 4px solid #f59e0b">
          <div style="
          display: flex;
          justify-content: space-between;
          align-items: start;
        ">
            <div>
              <span style="color: #f59e0b; font-weight: 700; font-size: 0.9rem">DAILY MISSION</span>
              <h1 style="margin: 0.5rem 0; font-size: 2rem">
                <%= task.title %>
              </h1>
            </div>
            <div style="
            background: rgba(245, 158, 11, 0.1);
            color: #fbbf24;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 700;
          ">
              +<%= task.experienceReward %> XP
            </div>
          </div>

          <p style="margin-top: 1rem; font-size: 1.1rem; color: #e2e8f0">
            <%= task.description %>
          </p>

          <div style="
          margin-top: 2rem;
          background: rgba(0, 0, 0, 0.3);
          padding: 1.5rem;
          border-radius: 8px;
        ">
            <h4 style="margin-bottom: 0.5rem; color: #94a3b8">Task:</h4>
            <p style="color: #fff; font-family: monospace">
              Analyze the email header provided in the sandbox.
            </p>
          </div>

          <form action="/gamification/complete-task" method="POST" style="margin-top: 2rem">
            <input type="hidden" name="taskId" value="<%= task.id %>" />

            <!-- Answer Input Field -->
            <div style="margin-bottom: 1.5rem;">
              <label for="dailyAnswer" style="
              display: block;
              color: #f59e0b;
              font-weight: 600;
              margin-bottom: 0.5rem;
              font-size: 0.95rem;
            ">
                Your Answer / Findings:
              </label>
              <textarea id="dailyAnswer" name="answer" rows="3"
                placeholder="Describe what you found or learned from this task..." required style="
              width: 100%;
              padding: 0.75rem;
              background: rgba(30, 41, 59, 0.5);
              border: 1px solid rgba(245, 158, 11, 0.3);
              border-radius: 8px;
              color: #cbd5e1;
              font-size: 0.95rem;
              font-family: inherit;
              resize: vertical;
              min-height: 80px;
            "></textarea>
              <p style="font-size: 0.8rem; color: #94a3b8; margin-top: 0.5rem;">
                üí° Quick tip: A brief summary is enough for daily missions!
              </p>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%">
              Mark Complete & Claim XP
            </button>
          </form>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %>